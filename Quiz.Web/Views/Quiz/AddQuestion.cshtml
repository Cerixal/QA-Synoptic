@model Quiz.Models.ViewModels.QuestionVM

<form asp-action="SubmitQuestion" id="AddQuestion">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @Html.DisplayNameFor(model => model.Question1)
        <input asp-for="Question1" class="form-control" />
        <span asp-validation-for="Question1" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(model => model.Answer)
        <input asp-for="Answer" class="form-control" />
        <span asp-validation-for="Answer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" id="button-ConfirmProdPrices" />
    </div>
</form>